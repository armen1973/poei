{% if content %}
        <div class="row">
            {% if content.top_left %}
                <div class="column">
                    {{ content.top_left }}
                </div>
            {% endif %}
            {% if content.top_right %}
                <div class="column">
                    {{ content.top_right }}
                </div>
            {% endif %}
        </div>
        <div class="row">
            {% if content.bottom_left %}
                <div class="column">
                    {{ content.bottom_left }}
                </div>
            {% endif %}
            {% if content.bottom_right %}
                <div class="column">
                    {{ content.bottom_right }}
                </div>
            {% endif %}
        </div>
{% endif %}